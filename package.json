{
  "name": "reactcraft",
  "description": "A modern React starter kit combining React 19, TypeScript, Tailwind, and Zustand with best practices for building high-quality web applications",
  "version": "1.10.0",
  "private": false,
  "type": "module",
  "author": {
    "name": "iknowmagic",
    "url": "https://github.com/iknowmagic"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "react19",
    "typescript",
    "tailwindcss",
    "daisyui",
    "vite",
    "starter-kit",
    "boilerplate",
    "zustand",
    "storybook",
    "vitest",
    "theming"
  ],
  "homepage": "https://github.com/iknowmagic/reactcraft",
  "repository": {
    "type": "git",
    "url": "https://github.com/iknowmagic/reactcraft.git"
  },
  "bugs": {
    "url": "https://github.com/iknowmagic/reactcraft/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "husky",
    "test": "vitest",
    "commit": "git-cz",
    "plop": "plop",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "typecheck": "tsc --noEmit",
    "branch": "zsh scripts/newbranch.zsh",
    "snap": "zsh scripts/snapshot.zsh",
    "minor": "npm version minor",
    "major": "npm version major",
    "bump:patch": "git diff --quiet && git checkout main && npm version patch && git push --follow-tags",
    "bump:minor": "git diff --quiet && git checkout main && npm version minor && git push --follow-tags",
    "bump:major": "git diff --quiet && git checkout main && npm version major && git push --follow-tags",
    "changelog": "zsh scripts/changelog-prep.zsh"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "daisyui": "^5.0.35",
    "framer-motion": "^12.9.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.5.3",
    "tailwindcss": "^4.1.5",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/cz-commitlint": "^19.8.0",
    "@commitlint/prompt": "^19.8.0",
    "@commitlint/prompt-cli": "^19.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/addon-viewport": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "commitizen": "^4.3.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-dom": "^1.48.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-react-x": "^1.48.5",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "playwright": "^1.52.0",
    "plop": "^4.0.1",
    "prettier": "^3.5.3",
    "storybook": "^8.6.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.4",
    "vitest": "^3.1.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
